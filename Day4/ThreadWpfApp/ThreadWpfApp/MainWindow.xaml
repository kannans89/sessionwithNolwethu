<Window x:Class="ThreadWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button Width="100" Height="50"
                    Name="btnPrint"
                    Content="Print"  Click="btnPrint_Click"/>
        <Button Width="100" Height="50" Name="btnHello"
        
        Content="Hello"   Click="btnHello_Click">

        </Button>
        <Button Width="100" Height="50" Name="btnPritnThread"

Content="PrintViaThread" Click="btnPritnThread_Click"  >

        </Button>

        <Button Width="100" Height="50" Name="btnPrintAsync2"

Content="PrintAsync2" Click="btnPrintAsync2_Click"   >

        </Button>

        <Button Width="162" Height="60"
                Name="PrintAsync2WithResult"

Content="PrintAsync2WithResult" Click="PrintAsync2WithResult_Click"    >

        </Button>

    </StackPanel>
</Window>
